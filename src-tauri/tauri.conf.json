{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "assistive-touch-app",
  "version": "0.1.0",
  "identifier": "com.assistive-touch-app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "assistive-touch-app",
        "width": 48,
        "height": 48,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": false,
        "x": 20,
        "y": 20
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "window",
          "permissions": [
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:window:allow-set-decorations",
            "core:window:allow-set-always-on-top",
            "core:window:allow-set-focus",
            "core:window:allow-set-skip-taskbar"
          ],
          "window": {
            "all": ["default"]
          }
        },
        {
          "identifier": "app",
          "permissions": ["core:app:default"],
          "app": {
            "all": ["default"]
          }
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}