{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Leo AI",
  "version": "0.1.0",
  "identifier": "com.leoai.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "shortcuts",
          "permissions": [
            "core:event:default",
            "core:window:default"
          ],
          "windows": ["main"]
        },
        {
          "identifier": "window",
          "permissions": [
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:window:allow-set-decorations",
            "core:window:allow-set-always-on-top",
            "core:window:allow-set-focus",
            "core:window:allow-set-skip-taskbar",
            "core:window:allow-set-fullscreen",
            "core:window:allow-set-visible-on-all-workspaces"
          ],
          "windows": ["main"]
        },
        {
          "identifier": "app",
          "permissions": ["core:app:default"],
          "windows": ["main"]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Leo AI",
        "width": 70,
        "height": 70,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": true,
        "hiddenTitle": true,
        "maximizable": false,
        "minimizable": false,
        "x": 50,
        "y": 50,
        "center": false,
        "focus": false,
        "theme": "Dark",
        "acceptFirstMouse": true,
        "visibleOnAllWorkspaces": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/app-icon.png"
    ]
  }
}